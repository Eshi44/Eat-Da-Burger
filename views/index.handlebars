  
<div class="container">
  <div class="row">
    <div class="col">
      1 of 3
    </div>
    <div class="col-6">
     <h1>Eat-Da-Burger!</h1>
    </div>
    <div class="col">
      3 of 3
    </div>
  </div>
  <div class="row">
    <div class="col">
      <ul>
        {{#each burgers}}
          {{#unless devoured}}
            {{> burgers/burger-block devoured=false}}
          {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-5">
      2 of 3 (wider)
    </div>
    <div class="col">
      <ul>
        {{#each burgers}}
          {{#if devoured}}
            {{> burgers/burger-block devoured=true}}
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
 <div class="row">
      <div class="col-12 text-center">
      <form class="create-form">
        <div class="form-group">
          <input type="text" id="burger" name="burger_name">
        </div>
        <button type="submit">Submit</button>
        <p>Enter a burger you want to eat Click the "Submit" button</p>
      </form>
    </div>
 </div>
</div>